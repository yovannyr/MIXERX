<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MIXERX.MAUI.Controls.HotCueButton">
    
    <Border StrokeThickness="0" BackgroundColor="{Binding CueColor, Source={x:Reference This}}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="4"/>
        </Border.StrokeShape>
        
        <Grid>
            <Label Text="{Binding CueNumber, Source={x:Reference This}}" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
            
            <Label Text="{Binding CueLabel, Source={x:Reference This}}" 
                   FontSize="9"
                   TextColor="White"
                   Opacity="0.8"
                   HorizontalOptions="Center" 
                   VerticalOptions="End"
                   Margin="0,0,0,5"
                   IsVisible="{Binding HasLabel, Source={x:Reference This}}"/>
        </Grid>
        
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding TapCommand, Source={x:Reference This}}"/>
        </Border.GestureRecognizers>
    </Border>
    
</ContentView>
