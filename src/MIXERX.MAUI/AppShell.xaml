<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MIXERX.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MIXERX.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="#0A0A0A">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#0D0D0D" HeightRequest="100" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="MIXERX" FontSize="24" FontAttributes="Bold" TextColor="#00FF88"/>
                <Label Text="PRO" FontSize="12" FontAttributes="Bold" TextColor="White" Margin="5,10,0,0"/>
            </StackPanel>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="DJ" Icon="music.png">
        <ShellContent Route="main" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Library" Icon="library.png">
        <ShellContent Route="library" ContentTemplate="{DataTemplate views:LibraryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent Route="settings" ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

</Shell>
