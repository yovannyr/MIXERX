<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- MIXERX Brand Colors -->
    <Color x:Key="Primary">#00FF88</Color>
    <Color x:Key="PrimaryDark">#00CC6A</Color>
    <Color x:Key="Secondary">#0088FF</Color>
    <Color x:Key="Accent">#FF0044</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundDark">#000000</Color>
    <Color x:Key="BackgroundMedium">#0A0A0A</Color>
    <Color x:Key="BackgroundLight">#0F0F0F</Color>
    <Color x:Key="Surface">#1A1A1A</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#999999</Color>
    <Color x:Key="TextDisabled">#666666</Color>
    
    <!-- Deck Colors -->
    <Color x:Key="DeckA">#00FF88</Color>
    <Color x:Key="DeckB">#0088FF</Color>
    
    <!-- Hot Cue Colors -->
    <Color x:Key="HotCue1">#FF0044</Color>
    <Color x:Key="HotCue2">#FF8800</Color>
    <Color x:Key="HotCue3">#00FF88</Color>
    <Color x:Key="HotCue4">#0088FF</Color>

</ResourceDictionary>
