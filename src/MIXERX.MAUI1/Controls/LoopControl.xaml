<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MIXERX.MAUI.Controls.LoopControl">
    
    <StackLayout Spacing="5">
        
        <!-- Loop Size Buttons -->
        <Label Text="AUTO LOOP" FontSize="10" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="3">
            <Button Grid.Column="0" Text="1/2" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="0.5"/>
            <Button Grid.Column="1" Text="1" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="1"/>
            <Button Grid.Column="2" Text="2" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="2"/>
            <Button Grid.Column="3" Text="4" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="4"/>
        </Grid>
        <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="3">
            <Button Grid.Column="0" Text="8" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="8"/>
            <Button Grid.Column="1" Text="16" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="16"/>
            <Button Grid.Column="2" Text="32" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="32"/>
            <Button Grid.Column="3" Text="64" FontSize="10" HeightRequest="30" Command="{Binding SetLoopCommand, Source={x:Reference This}}" CommandParameter="64"/>
        </Grid>
        
        <!-- Loop Controls -->
        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="5" Margin="0,10,0,0">
            <Button Grid.Column="0" Text="รท2" FontSize="12" HeightRequest="35" Command="{Binding HalveLoopCommand, Source={x:Reference This}}"/>
            <Button Grid.Column="1" Text="EXIT" FontSize="12" HeightRequest="35" BackgroundColor="{StaticResource Accent}" Command="{Binding ExitLoopCommand, Source={x:Reference This}}"/>
            <Button Grid.Column="2" Text="ร2" FontSize="12" HeightRequest="35" Command="{Binding DoubleLoopCommand, Source={x:Reference This}}"/>
        </Grid>
        
    </StackLayout>
    
</ContentView>
