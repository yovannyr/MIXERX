<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="MIXERX.UI.Views.SettingsWindow"
        Title="MIXERX Settings"
        Width="900" Height="700"
        Background="#1a1a1a"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="50,*,60">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#0d0d0d" BorderBrush="#00ff88" BorderThickness="0,0,0,2">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                    <TextBlock Text="MIXERX" FontSize="18" FontWeight="Bold" Foreground="#00ff88"/>
                    <TextBlock Text="SETTINGS" FontSize="18" FontWeight="Bold" Foreground="#fff" Margin="10,0,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Content="✕" Width="40" Height="40" Background="Transparent" Foreground="#fff" FontSize="20" Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="#0a0a0a" Margin="10">
            
            <!-- Audio Tab -->
            <TabItem Header="Audio">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="AUDIO SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Audio Driver" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="WASAPI" IsSelected="True"/>
                                <ComboBoxItem Content="CoreAudio"/>
                                <ComboBoxItem Content="ASIO"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Sample Rate" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="44100 Hz"/>
                                <ComboBoxItem Content="48000 Hz" IsSelected="True"/>
                                <ComboBoxItem Content="96000 Hz"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Buffer Size" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="128 samples"/>
                                <ComboBoxItem Content="256 samples"/>
                                <ComboBoxItem Content="512 samples" IsSelected="True"/>
                                <ComboBoxItem Content="1024 samples"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Master Volume" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="85" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Cue Volume" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="75" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Decks Tab -->
            <TabItem Header="Decks">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="DECK SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Tempo Range" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="±6%"/>
                                <ComboBoxItem Content="±8%" IsSelected="True"/>
                                <ComboBoxItem Content="±10%"/>
                                <ComboBoxItem Content="±20%"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Keylock Default ON" Foreground="#fff" Margin="0,10"/>
                        <CheckBox Content="Show Energy Overlay" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        <CheckBox Content="Show Beat Markers" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Waveform Zoom" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0.5" Maximum="5" Value="1" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Effects & Loops Tab -->
            <TabItem Header="Effects &amp; Loops">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="EFFECTS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Reverb Wet (Default)" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="30" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Delay Mix (Default)" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="50" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Filter Cutoff (Default)" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="100" Value="50" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <CheckBox Content="Bypass Effects on Track Load" Foreground="#fff" Margin="0,10"/>
                        
                        <TextBlock Text="LOOPS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,20,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Default Loop Length" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="1 beat"/>
                                <ComboBoxItem Content="2 beats"/>
                                <ComboBoxItem Content="4 beats" IsSelected="True"/>
                                <ComboBoxItem Content="8 beats"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Loop Quantize (Beat Snap)" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Library & Display Tab -->
            <TabItem Header="Library &amp; Display">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="LIBRARY" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Auto-Import on Startup" Foreground="#fff" Margin="0,5" IsChecked="True"/>
                        <CheckBox Content="Show iTunes Library" Foreground="#fff" Margin="0,5"/>
                        <CheckBox Content="Analyze Tracks on Import (BPM/Key)" Foreground="#fff" Margin="0,5" IsChecked="True"/>
                        <CheckBox Content="Protect Library" Foreground="#fff" Margin="0,5"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,15">
                            <TextBlock Text="Played Track Color" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Blue" IsSelected="True"/>
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="Green"/>
                                <ComboBoxItem Content="Yellow"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Library Text Size" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="8" Maximum="20" Value="12" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <TextBlock Text="DISPLAY" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,20,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="BPM Decimal Places" Foreground="#999" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1">
                                <RadioButton Content="1 Decimal" Foreground="#fff" IsChecked="True"/>
                                <RadioButton Content="2 Decimals" Foreground="#fff" Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Key Notation" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Camelot" IsSelected="True"/>
                                <ComboBoxItem Content="Standard"/>
                                <ComboBoxItem Content="Open Key"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Color Key Display" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        <CheckBox Content="Hi-Res Screen Display" Foreground="#fff" Margin="0,5"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Max Screen Updates (FPS)" Foreground="#999" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" Minimum="5" Maximum="60" Value="30" Width="300" HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Recording Tab -->
            <TabItem Header="Recording">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="RECORDING SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Default Format" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="WAV"/>
                                <ComboBoxItem Content="MP3" IsSelected="True"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="MP3 Bitrate" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="128 kbps"/>
                                <ComboBoxItem Content="192 kbps" IsSelected="True"/>
                                <ComboBoxItem Content="256 kbps"/>
                                <ComboBoxItem Content="320 kbps"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Auto-Delete WAV after MP3 Conversion" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,15">
                            <TextBlock Text="Recording Directory" Foreground="#999" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox Width="300" Text="%USERPROFILE%/Music/MIXERX" IsReadOnly="True"/>
                                <Button Content="Browse..." Margin="10,0,0,0" Background="#1a1a1a" Foreground="#fff" CornerRadius="3"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- MIDI Tab -->
            <TabItem Header="MIDI">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="MIDI SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="MIDI Device" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="300" HorizontalAlignment="Left">
                                <ComboBoxItem Content="None" IsSelected="True"/>
                                <ComboBoxItem Content="(No devices detected)"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,15">
                            <TextBlock Text="Controller Mapping" Foreground="#999" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBox Width="300" Text="No mapping loaded" IsReadOnly="True"/>
                                <Button Content="Load..." Margin="10,0,0,0" Background="#1a1a1a" Foreground="#fff" CornerRadius="3"/>
                            </StackPanel>
                        </Grid>
                        
                        <CheckBox Content="MIDI Learn Mode" Foreground="#fff" Margin="0,10"/>
                        <CheckBox Content="MIDI Clock Sync" Foreground="#fff" Margin="0,5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Performance Tab -->
            <TabItem Header="Performance">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="PERFORMANCE SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Hot Cue Count" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="4 Cues" IsSelected="True"/>
                                <ComboBoxItem Content="8 Cues"/>
                                <ComboBoxItem Content="16 Cues"/>
                            </ComboBox>
                        </Grid>
                        
                        <Grid ColumnDefinitions="200,*" Margin="0,10">
                            <TextBlock Text="Pad Layout" Foreground="#999" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Width="200" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Default" IsSelected="True"/>
                                <ComboBoxItem Content="Compact"/>
                                <ComboBoxItem Content="Extended"/>
                            </ComboBox>
                        </Grid>
                        
                        <CheckBox Content="Full Screen on Startup" Foreground="#fff" Margin="0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Privacy Tab -->
            <TabItem Header="Privacy">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="PRIVACY SETTINGS" FontSize="14" Foreground="#00ff88" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="Send Usage Data to MIXERX" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        <TextBlock Text="Help MIXERX improve by automatically sending information about how you use the software." 
                                  FontSize="10" Foreground="#666" Margin="20,0,0,10" TextWrapping="Wrap" MaxWidth="600" HorizontalAlignment="Left"/>
                        
                        <CheckBox Content="Send Crash Reports" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        <TextBlock Text="Automatically send crash reports to help us fix bugs faster." 
                                  FontSize="10" Foreground="#666" Margin="20,0,0,10" TextWrapping="Wrap" MaxWidth="600" HorizontalAlignment="Left"/>
                        
                        <CheckBox Content="Anonymous Statistics" Foreground="#fff" Margin="0,10" IsChecked="True"/>
                        <TextBlock Text="Share anonymous usage statistics to help improve MIXERX." 
                                  FontSize="10" Foreground="#666" Margin="20,0,0,10" TextWrapping="Wrap" MaxWidth="600" HorizontalAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Bottom Buttons -->
        <Border Grid.Row="2" Background="#0f0f0f" BorderBrush="#1a1a1a" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10" Spacing="10">
                <Button Content="Apply" Background="#00ff88" Foreground="#000" Width="100" Height="35" FontWeight="Bold" CornerRadius="4" Click="ApplyButton_Click"/>
                <Button Content="Cancel" Background="#1a1a1a" Foreground="#fff" Width="100" Height="35" CornerRadius="4" Click="CloseButton_Click"/>
                <Button Content="Reset to Defaults" Background="#1a1a1a" Foreground="#fff" Width="150" Height="35" CornerRadius="4" Click="ResetButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
